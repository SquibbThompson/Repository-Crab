# Function to calculate the activation status of a cell based on its neighbors and layers
def activation_status(layer, i, j, grid, activation_matches):
    active_neighbors = 0
    
    for dl in [-1, 0, 1]:  # Layer direction
        if layer + dl < 0 or layer + dl >= grid.shape[0]:
            continue
        for dx in [-1, 0, 1]:  # X direction
            for dy in [-1, 0, 1]:  # Y direction
                if dx == 0 and dy == 0 and dl == 0:
                    continue
                ni, nj = (i + dx) % grid.shape[1], (j + dy) % grid.shape[2]
                if grid[layer + dl, ni, nj] == 1:
                    active_neighbors += 1
                    
    if grid[layer, i, j] == 0 and active_neighbors in activation_matches:
        return 1
    elif grid[layer, i, j] == 1 and active_neighbors not in activation_matches:
        return 0
    else:
        return grid[layer, i, j]

# Function to evolve multiple layers in the grid
def evolve_multi_layer(grid, activation_matches):
    new_grid = np.zeros(grid.shape, dtype=int)
    
    for layer in range(grid.shape[0]):
        for i in range(grid.shape[1]):
            for j in range(grid.shape[2]):
                # This will update new_grid[layer, i, j] while taking into account all its 3D neighbors
                new_grid[layer, i, j] = activation_status(layer, i, j, grid, activation_matches)
    
    return new_grid

# Function to evolve the entire grid using multiprocessing
def evolve_grid_multiprocessing(grid, activation_matches):
    # Split the 3D grid into a list of 2D grids
    layers = [grid[i, :, :] for i in range(grid.shape[0])]
    
    # Prepare the data to send to each process
    layers_data = [(layer, activation_matches) for layer in layers]
    
    # Create a pool of worker processes
    with Pool() as pool:
        new_layers = pool.map(layers_data)
        
    # Reassemble into a 3D grid
    new_grid = np.stack(new_layers)
    
    return new_grid

def visualize_grid_color_and_density(grid, ax):
    # Initialize a 3-channel image to hold the RGB values
    composite_image = np.zeros((grid.shape[1], grid.shape[2], 3), dtype=np.uint8)
    
    color_map = {
        0: [0, 0, 0],  # Black for no active layers
        1: [0, 0, 255],  # Blue for 1 active layer
        2: [0, 255, 0],  # Green for 2 active layers
        3: [255, 165, 0],  # Orange for 3 active layers
        4: [255, 0, 0]  # Red for all 4 active layers
    }
    
    for y in range(grid.shape[1]):
        for x in range(grid.shape[2]):
            # Calculate how many layers are active at this point
            active_layers = sum([grid[layer, y, x] for layer in range(grid.shape[0])])
            
            # Get the color for this number of active layers
            color = color_map[active_layers]
            
            # Set the color in the composite image
            composite_image[y, x, :] = color
            
    ax.imshow(composite_image)

# Save the animation as a GIF (optional)
ani.save('3D Cardiod.gif', writer='pillow', fps=10)

def main():
    # Initialize the pseudo-3D grid
    binary_strings = [binary_string1, binary_string2, binary_string3, binary_string4]  
    initial_grid = initialize_3D_grid(binary_strings)
    
    # Define the user-defined activation matches (only once)
    activation_matches = [3,4,6,8,9]
    
    # Set up animation
    fig, ax = plt.subplots()
    
    def animate(iteration):
        nonlocal initial_grid
        initial_grid = evolve_multi_layer(initial_grid, activation_matches)
        ax.clear()
        visualize_grid_color_and_density(initial_grid, ax)
    
    ani = animation.FuncAnimation(fig, animate, frames=34)
    plt.show()
    


if __name__ == '__main__':
    main()

    ani = animation.FuncAnimation(fig, animate, frames=34)
